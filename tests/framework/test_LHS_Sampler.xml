<?xml version="1.0" encoding="UTF-8"?>
<Simulation verbosity='debug'>

<RunInfo>
    <WorkingDir>LHStest</WorkingDir>
    <Sequence>myLHS</Sequence>
    <batchSize>1</batchSize>
</RunInfo>

<Models>
    <Dummy name='MyDummy' subType='' print='True'/>
</Models>

<Distributions>
    <Normal name='Gauss1'>
        <mean>1</mean>
        <sigma>0.001</sigma>
        <lowerBound>0</lowerBound>
        <upperBound>2</upperBound>
        <adjustement>up</adjustement>
    </Normal>
    <Normal name='Gauss2'>
        <mean>1</mean>
        <sigma>0.4</sigma>
        <lowerBound>0</lowerBound>
        <upperBound>2</upperBound>
        <adjustement>scaling</adjustement>
    </Normal>
    <Triangular name='DistTri1'>
        <apex>1</apex>
        <min>-0.1</min>
        <max>3</max>
    </Triangular>
</Distributions>
<Samplers>
    <Stratified name='myLHS' initial_seed ='1'>
      <sampler_init>
        <initial_seed>1</initial_seed>
      </sampler_init>
      <variable name='VarTri1' >
        <distribution  >DistTri1</distribution>
        <grid         type='value'      construction='custom'>0.02 0.5 0.6 0.8</grid>
      </variable>
      <variable name='VarGauss1' >
        <distribution>Gauss1</distribution>
        <grid type='value' construction='equal' lowerBound='0.02' steps='3'>0.3</grid>
      </variable>
      <variable name='VarGauss2'>
        <distribution >Gauss2</distribution>
        <grid type='CDF' construction='equal' upperBound='0.2' steps='3'>0.01</grid>
      </variable>
    </Stratified>
</Samplers>

<OutStreamManager>
    <Print name='outLHS_dump'>
        <type>csv</type>
        <source>outLHS</source>
    </Print>
</OutStreamManager>
<DataObjects>
    <TimePointSet name='outLHS'>
        <Input>VarGauss1,VarGauss2,VarTri1</Input>
        <Output>OutputPlaceHolder</Output>
   </TimePointSet>
   <TimePointSet name='dummyIN'>
      <Input>VarGauss1,VarGauss2,VarTri1</Input>
      <Output>OutputPlaceHolder</Output>
   </TimePointSet>
</DataObjects>

<Steps>
    <MultiRun name='myLHS'>
        <Input   class='DataObjects'    type='TimePointSet' >dummyIN</Input>
        <Model   class='Models'   type='Dummy'        >MyDummy</Model>
        <Sampler class='Samplers' type='Stratified'          >myLHS</Sampler>
        <Output  class='DataObjects'    type='TimePointSet' >outLHS</Output>
        <Output  class='OutStreamManager' type='Print'>outLHS_dump</Output>
    </MultiRun >
</Steps>

</Simulation>



