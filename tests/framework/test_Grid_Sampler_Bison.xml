<?xml version="1.0" encoding="UTF-8"?>
<Simulation>

<RunInfo>
    <WorkingDir>GridTestBison</WorkingDir>
    <Files>gap_perfect_transfer_test.i,gap_perfect_transfer_test.e</Files>
    <Sequence>CustomSampler</Sequence>
    <batchSize>1</batchSize>
</RunInfo>

<Models>
    <Code name='Bison' subType='MooseBasedApp'><executable>%FRAMEWORK_DIR%/../../bison/bison-%METHOD%</executable></Code>
</Models>

<Distributions>
    <Normal name='Gauss1'>
        <mean>1</mean>
        <sigma>0.001</sigma>
        <lowerBound>0.5</lowerBound>
        <upperBound>1.5</upperBound>
        <adjustement>up</adjustement>
    </Normal>
    <Normal name='Gauss2'>
        <mean>1</mean>
        <sigma>0.4</sigma>
        <lowerBound>0.5</lowerBound>
        <upperBound>1.5</upperBound>
        <adjustement>scaling</adjustement>
    </Normal>
    <Triangular name='DistTri1'>
        <apex>1</apex>
        <min>0.1</min>
        <max>4</max>
    </Triangular>
</Distributions>
<Samplers>
    <Grid name='myGrid'>
      <variable name='Materials|heat1|thermal_conductivity' >
        <distribution type='Normal'>Gauss1</distribution>
        <grid         type='value' construction='custom' >0.6 0.7 0.8</grid>
      </variable>
      <variable name='Materials|heat1|specific_heat' >
        <distribution type='Normal' >Gauss2</distribution>
        <grid         type='CDF'    construction='custom'>0.5 1.0 0.0</grid>
      </variable>
      <variable name='Materials|heat2|thermal_conductivity'>
        <distribution type='Triangular' >DistTri1</distribution>
        <grid type='value' upperBound='4' construction='equal' steps='1'>0.5</grid>
      </variable>
    </Grid>
</Samplers>

<OutStreamManager>
    <Print name='outGrid_dump'>
        <type>csv</type>
        <source>outGrid</source>
    </Print>
</OutStreamManager>

<Datas>
    <TimePointSet name='outGrid'>
      <Input>Materials|heat1|thermal_conductivity,Materials|heat1|specific_heat,Materials|heat2|thermal_conductivity</Input>
      <Output>aveTempLeft,aveTempRight</Output>
    </TimePointSet>

    <Histories name='stories'>
        <Input>Materials|heat1|thermal_conductivity,Materials|heat2|thermal_conductivity</Input>
        <Output>aveTempLeft,aveTempRight</Output>
   </Histories>
</Datas>

<Steps>
  <MultiRun name='CustomSampler'>
    <Input   class = 'Files'     type=''         >gap_perfect_transfer_test.i</Input>
    <Input   class = 'Files'     type=''         >gap_perfect_transfer_test.e</Input>
    <Model   class = 'Models'    type='Code'     >Bison</Model>
    <Sampler class = 'Samplers'  type='Grid'     >myGrid</Sampler>
    <Output  class = 'DataBases' type='HDF5'     >test_bison_grid</Output>
    <Output  class = 'Datas'     type='Histories'>stories</Output>
    <Output  class='Datas'     type='TimePointSet'>outGrid</Output>
    <Output  class='OutStreamManager' type='Print'>outGrid_dump</Output>
    </MultiRun >
</Steps>
<DataBases>
  <HDF5 name="test_bison_grid"/> 
</DataBases>
</Simulation>



