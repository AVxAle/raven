<?xml version="1.0" encoding="UTF-8"?>
<Simulation>
<!-- An example of the approximate Morse-Smale complex interface that tests each
     graph structures available -->
  <RunInfo>
    <WorkingDir>data</WorkingDir>
    <Sequence>
      sampleData,
      decomposeRBS
    </Sequence>
  </RunInfo>

  <Models>
    <ExternalModel name='test' subType='' ModuleToLoad = '../GaussianPeaks'>
      <variable>X</variable>
      <variable>Y</variable>
      <variable>Z</variable>
    </ExternalModel>
    <!-- Relaxed Beta Skeleton (beta=1, Relaxed Gabriel) -->
    <PostProcessor name='AMSC_RBS' subType='TopologicalDecomposition'>
      <graph>Relaxed Beta Skeleton</graph>
      <gradient>steepest</gradient>
      <beta>1</beta>
      <knn>26</knn>
      <normalization>None</normalization>
      <parameters>X,Y</parameters>
      <response>Z</response>
      <simplification>0.2</simplification>
      <persistence>difference</persistence>
    </PostProcessor>
  </Models>

  <Distributions>
    <Uniform name="uniform">
      <lowerBound>0</lowerBound>
      <upperBound>1</upperBound>
    </Uniform>
  </Distributions>

  <Samplers>
    <MonteCarlo name="sampler">
      <sampler_init>
        <initial_seed>8</initial_seed>
        <limit>1000</limit>
      </sampler_init>
      <variable name="X">
        <distribution>uniform</distribution>
      </variable>
      <variable name="Y">
        <distribution>uniform</distribution>
      </variable>
    </MonteCarlo>
  </Samplers>

  <Steps>
    <!-- Sample the data from the test function -->
    <MultiRun name="sampleData">
      <Input   class="DataObjects" type="PointSet"         >dummyIN</Input>
      <Model   class="Models"      type="ExternalModel"    >test</Model>
      <Sampler class="Samplers"    type="MonteCarlo"       >sampler</Sampler>
      <!-- <Sampler class="Samplers"    type="Grid"             >sampler</Sampler> -->
      <Output  class="DataObjects" type="PointSet"         >testData</Output>
    </MultiRun>
    <!-- Perform the topological decomposition -->
    <PostProcess name="decomposeRBS">
      <Input  class="DataObjects"      type="PointSet"     >testData</Input>
      <Model  class="Models"           type="PostProcessor">AMSC_RBS</Model>
      <Output class="DataObjects"      type="PointSet"     >outRBS</Output>
      <Output class="OutStreamManager" type="Print"        >segRBS</Output>
    </PostProcess>
  </Steps>

  <OutStreamManager>
    <!-- A csv file containing the output of the example -->
    <Print name="segRBS">
      <type>csv</type>
      <source>outRBS</source>
    </Print>
  </OutStreamManager>

  <DataObjects>
    <!-- The input PointSet object -->
    <PointSet name="dummyIN">
      <Input>X,Y</Input>
      <Output>OutputPlaceHolder</Output>
    </PointSet>
    <PointSet name="testData">
      <Input>X,Y</Input>
      <Output>Z</Output>
    </PointSet>
    <!-- The output PointSet objects -->
    <PointSet name="outRBS">
      <Input>X,Y</Input>
      <Output>Z</Output>
    </PointSet>
  </DataObjects>

</Simulation>
