<?xml version="1.0" encoding="UTF-8"?>
<!-- A simple example of the Approximate Morse-Smale Complex (AMSC) interface
     where each of the examples will showcase different partitions using
     different persistence simplfication metrics -->
<!-- <Simulation verbosity="silent"> -->
<Simulation>
  <RunInfo>
    <WorkingDir>topology</WorkingDir>
    <Sequence>
      sampleData,
      decomposeValue,
      decomposeProbability,
      decomposeCount,
      decomposeFull
    </Sequence>
  </RunInfo>

  <Models>
    <ExternalModel name='testFunction' subType=''
                   ModuleToLoad='./topology/Schwefel'>
      <variable>X</variable>
      <variable>Y</variable>
      <variable>Z</variable>
    </ExternalModel>
  <!-- The default standard definition of persistence -->
    <PostProcessor name='AMSC_Value' subType='TopologicalDecomposition'>
      <graph>Beta Skeleton</graph>
      <gradient>steepest</gradient>
      <beta>1</beta>
      <knn>8</knn>
      <normalization>None</normalization>
      <parameters>X,Y</parameters>
      <response>Z</response>
      <simplification>575</simplification>
      <persistence>difference</persistence>
    </PostProcessor>
    <!-- Persistence related to relative size of each cluster -->
    <PostProcessor name='AMSC_Count' subType='TopologicalDecomposition'>
      <graph>Beta Skeleton</graph>
      <gradient>steepest</gradient>
      <beta>1</beta>
      <knn>8</knn>
      <normalization>None</normalization>
      <parameters>X,Y</parameters>
      <response>Z</response>
      <simplification>300</simplification>
      <persistence>count</persistence>
    </PostProcessor>
    <!-- Persistence related to relative probability of each cluster -->
    <PostProcessor name='AMSC_Probability' subType='TopologicalDecomposition'>
      <graph>Beta Skeleton</graph>
      <gradient>steepest</gradient>
      <beta>1</beta>
      <knn>8</knn>
      <normalization>None</normalization>
      <parameters>X,Y</parameters>
      <response>Z</response>
      <!-- <simplification>0.1</simplification> -->
      <simplification>0.0009</simplification>
      <weighted>true</weighted>
      <persistence>probability</persistence>
    </PostProcessor>
    <!-- The full segmentation with no simplification -->
    <PostProcessor name='AMSC_Full' subType='TopologicalDecomposition'>
      <graph>Beta Skeleton</graph>
      <gradient>steepest</gradient>
      <beta>1</beta>
      <knn>8</knn>
      <normalization>None</normalization>
      <parameters>X,Y</parameters>
      <response>Z</response>
    </PostProcessor>
  </Models>

  <Distributions>
    <Normal name="NormDist">
      <mean>0.5</mean>
      <sigma>0.0125</sigma>
    </Normal>
  </Distributions>

  <Samplers>
    <Grid name="gridSampler">
      <variable name="X">
        <distribution>NormDist</distribution>
        <grid type='value' construction='equal' steps='50'>0 1</grid>
      </variable>
      <variable name="Y">
        <distribution>NormDist</distribution>
        <grid type='value' construction='equal' steps='50'>0 1</grid>
      </variable>
    </Grid>
  </Samplers>

  <Steps>
  <!-- Load the data from a csv into the hdf5 database used by this run -->
    <MultiRun name='sampleData' pauseAtEnd='False'>
      <Sampler class='Samplers'    type='Grid'         >gridSampler</Sampler>
      <Input   class='DataObjects' type='PointSet'     >dummyIN</Input>
      <Model   class='Models'      type='ExternalModel'>testFunction</Model>
      <Output  class='DataObjects' type='PointSet'     >testData</Output>
    </MultiRun>
  <!-- Perform the topological decomposition -->
    <PostProcess name='decomposeValue'>
      <Input   class='DataObjects'      type='PointSet'     >testData</Input>
      <Model   class='Models'           type='PostProcessor'>AMSC_Value</Model>
      <Output  class='DataObjects'      type='PointSet'     >dataValue</Output>
      <Output  class='OutStreamManager' type='Print'        >segValue</Output>
    </PostProcess>
    <PostProcess name='decomposeProbability'>
      <Input   class='DataObjects'      type='PointSet'     >testData</Input>
      <Model   class='Models'           type='PostProcessor'>AMSC_Probability</Model>
      <Output  class='DataObjects'      type='PointSet'     >dataProb</Output>
      <Output  class='OutStreamManager' type='Print'        >segProb</Output>
    </PostProcess>
    <PostProcess name='decomposeCount'>
      <Input   class='DataObjects'      type='PointSet'     >testData</Input>
      <Model   class='Models'           type='PostProcessor'>AMSC_Count</Model>
      <Output  class='DataObjects'      type='PointSet'     >dataCount</Output>
      <Output  class='OutStreamManager' type='Print'        >segCount</Output>
    </PostProcess>
    <PostProcess name='decomposeFull'>
      <Input   class='DataObjects'      type='PointSet'     >testData</Input>
      <Model   class='Models'           type='PostProcessor'>AMSC_Full</Model>
      <Output  class='DataObjects'      type='PointSet'     >dataFull</Output>
      <Output  class='OutStreamManager' type='Print'        >segFull</Output>
    </PostProcess>
  </Steps>

  <OutStreamManager>
  <!-- A csv file containing the output of the example -->
    <Print name='segValue'>
      <type>csv</type>
      <source>dataValue</source>
    </Print>
    <Print name='segProb'>
      <type>csv</type>
      <source>dataProb</source>
    </Print>
    <Print name='segCount'>
      <type>csv</type>
      <source>dataCount</source>
    </Print>
    <Print name='segFull'>
      <type>csv</type>
      <source>dataFull</source>
    </Print>
  </OutStreamManager>

  <Databases>
  <!-- The necessary database object -->
    <HDF5 name="schwefelDB"/>
  </Databases>

  <DataObjects>
  <!-- The input TimePointSet object -->
    <PointSet name="dummyIN">
      <Input>X,Y</Input>
      <Output>OutputPlaceHolder</Output>
    </PointSet>
    <PointSet name='testData'>
      <Input>X,Y</Input>
      <Output>Z</Output>
    </PointSet>
  <!-- The output TimePointSet objects -->
    <PointSet name='dataValue'>
      <Input>X,Y</Input>
      <Output>Z</Output>
    </PointSet>
    <PointSet name='dataProb'>
      <Input>X,Y</Input>
      <Output>Z</Output>
    </PointSet>
    <PointSet name='dataCount'>
      <Input>X,Y</Input>
      <Output>Z</Output>
    </PointSet>
    <PointSet name='dataFull'>
      <Input>X,Y</Input>
      <Output>Z</Output>
    </PointSet>
  </DataObjects>
</Simulation>