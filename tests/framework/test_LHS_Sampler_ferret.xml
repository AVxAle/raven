<?xml version="1.0" encoding="UTF-8"?>
<Simulation verbosity='debug'>

<RunInfo>
    <WorkingDir>LHStestFerret</WorkingDir>
    <Files>simple_diffusion.i</Files>
    <Sequence>myLHS</Sequence>
    <batchSize>9</batchSize>
</RunInfo>

<Models>
    <Code name='Ferret' subType='MooseBasedApp'><executable>%FRAMEWORK_DIR%/../../ferret/ferret-%METHOD%</executable></Code>
</Models>

<Distributions>
    <Normal name='Gauss1'>
        <mean>0.5</mean>
        <sigma>0.001</sigma>
        <lowerBound>0</lowerBound>
        <upperBound>1</upperBound>
        <adjustement>up</adjustement>
    </Normal>
    <Uniform name='Uniform1'>
        <lowerBound>0</lowerBound>
        <upperBound>1.0</upperBound>
    </Uniform>
</Distributions>
<Samplers>
    <Stratified name='myLHS'>
      <variable name='BCs|left|value' >
        <distribution >Gauss1</distribution>
        <grid type='value' construction='equal' lowerBound='0.02' steps='3'>0.3</grid>
      </variable>
      <variable name='BCs|right|value'>
        <distribution >Uniform1</distribution>
        <grid type='CDF' construction='equal' upperBound='0.2' steps='3'>0.01</grid>
      </variable>
    </Stratified>
</Samplers>



<Steps>
    <MultiRun name='myLHS'>
      <Input   class = 'Files'      type=''          >simple_diffusion.i</Input>
      <Model   class = 'Models'     type='Code'      >Ferret</Model>
      <Sampler class='Samplers' type='Stratified'         >myLHS</Sampler>
      <Output  class='Databases'    type='HDF5'>test_ferret_lhs</Output>
    </MultiRun >
</Steps>

<Databases>
  <HDF5 name="test_ferret_lhs"/> 
</Databases>

</Simulation>



