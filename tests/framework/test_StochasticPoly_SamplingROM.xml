<?xml version="1.0" encoding="UTF-8"?>
<Simulation debug='False'>

<RunInfo>
    <WorkingDir>StochasticPolyTest</WorkingDir>
    <Sequence>CustomSampler,Plot</Sequence> <!--what is this? -->
    <batchSize>2</batchSize>
</RunInfo>

<Models>
    <Dummy name='MyDummy' subType='' print='True'/>
</Models>

<Distributions>
    <Normal name='Gauss1'>
        <mean>1</mean>
        <sigma>0.001</sigma>
        <lowerBound>0</lowerBound>
        <upperBound>2</upperBound>
        <adjustement>up</adjustement>
    </Normal>
    <Normal name='Gauss2'>
        <mean>1</mean>
        <sigma>0.4</sigma>
        <lowerBound>0</lowerBound>
        <upperBound>2</upperBound>
        <adjustement>scaling</adjustement>
    </Normal>
    <Triangular name='DistTri1'>
        <apex>1</apex>
        <min>-0.1</min>
        <max>4</max>
    </Triangular>
    <Uniform name="Uni1">
      <low>1</low>
      <high>5</high>
    </Uniform>
    <Uniform name="Uni2">
      <low>-1</low>
      <high>1</high>
    </Uniform>
</Distributions>

<Samplers>
    <StochasticPolynomials name='myStochPolys' indexSetType='TotalDegree' maxPolyOrder='4'>
      <variable name='VarGauss1' impWeight='1'>
        <distribution>Gauss1</distribution>
        <quadrature>
          <type>Hermite</type>
          <polynomials>Hermite</polynomials>
        </quadrature>
      </variable>
      <variable name='VarGauss2' impWeight='1'>
        <distribution>Gauss2</distribution>
        <quadrature>
          <type>Hermite</type>
          <polynomial>pHermite1</polynomial>
        </quadrature>
      </variable>
      <variable name='VarTri1' impWeight='1'>
        <distribution>DistTri1</distribution>
      </variable>
      <!--variable name='VarUni1' impWeight='1'>
        <distribution>Uni1</distribution>
        <quadrature>
          <type>Legendre</type>
          <polynomials>Legendre</polynomials>
        </quadrature>
      </variable>
      <variable name='VarUni2' impWeight='1'>
        <distribution>Uni2</distribution>
        <quadrature>
          <type>Legendre</type>
          <polynomials>Legendre</polynomials>
        </quadrature>
      </variable-->
    </StochasticPolynomials>
    <!--
    <AdaptiveStochasticPolynomial name='myAdaptiveSC' indexSetType='TP' maxPolyOrder='2'>
    </AdaptiveStochasticPolynomial>
    -->
      
</Samplers>

<Datas>
  <TimePointSet name='outGrid'>
    <Input>VarGauss1,VarGauss2,VarTri1</Input>
    <!--Input>VarUni1,VarUni2</Input-->
    <Output>OutputPlaceHolder</Output>
  </TimePointSet>
  <TimePointSet name='dummyIN'>
  <Input>VarGauss1,VarGauss2,VarTri1</Input>
    <!--Input>VarUni1,VarUni2</Input-->
    <Output>OutputPlaceHolder</Output>
  </TimePointSet>
</Datas>
    
<OutStreamManager>
    <Print name='outGrid_dump'>
        <type>csv</type>
        <source>outGrid</source>
    </Print>
    <Plot name="Gausses and Triangular, TD" dim="3" overwrite="True" pauseAtEnd="True">
      <plotSettings>
        <plot>
          <type>scatter</type>
          <x>outGrid|Input|VarGauss1</x>
          <y>outGrid|Input|VarGauss2</y>
          <z>outGrid|Input|VarTri1</z>
        </plot>
        <xlabel>Gauss1</xlabel>
        <ylabel>Gauss2</ylabel>
        <zlabel>Triangle1</zlabel>
      </plotSettings>
      <actions>
        <how>pdf,screen</how>
        <title><text>Sparse Grid, Normal and Triangular, TD</text></title>
      </actions>
    </Plot>
    <Plot name="Unis" dim="2" overwrite="True" pauseAtEnd="True">
      <plotSettings>
        <plot>
          <type>scatter</type>
          <x>outGrid|Input|VarUni1</x>
          <y>outGrid|Input|VarUni2</y>
        </plot>
        <xlabel>Uni1</xlabel>
        <ylabel>Uni2</ylabel>
      </plotSettings>
      <actions>
        <how>pdf,screen</how>
        <title><text>Sparse Grid, Uniforms</text></title>
      </actions>
    </Plot>
</OutStreamManager>

<Steps>
     <MultiRun name='CustomSampler'>
        <Input   class='Datas'     type='TimePointSet'>dummyIN</Input>
        <Model   class='Models'    type='Dummy'       >MyDummy</Model>
        <Sampler class='Samplers'  type='StochasticPolynomials'>myStochPolys</Sampler>
        <Output  class='Datas'     type='TimePointSet'>outGrid</Output>
        <Output  class='DataBases' type='HDF5'        >test_DummyModel_db</Output>
        <Output  class='OutStreamManager' type='Print'>outGrid_dump</Output>
    </MultiRun >
    <OutStreamStep name="Plot" pauseAtEnd="True">
        <Input   class='Datas'     type='TimePointSet'>outGrid</Input>
        <Output  class='OutStreamManager' type='Plot'>Gausses</Output>
    </OutStreamStep>
</Steps>
<DataBases>
        <HDF5 name="test_DummyModel_db"/> 
</DataBases>
</Simulation>



