<?xml version="1.0" ?>
<Simulation verbosity='debug'>
  <RunInfo>
    <WorkingDir>VariableGroups</WorkingDir>
    <Sequence>sample,train,samprom,print</Sequence>
    <batchSize>1</batchSize>
  </RunInfo>

  <VariableGroups>
      <Group name="x_odd"      dependencies=""                >x1,x3,x5</Group>
      <Group name="x_even"     dependencies=""                >x2,x4,x6</Group>
      <Group name="x_first"    dependencies=""                >x1,x2,x3</Group>
      <Group name="y_group"    dependencies=""                >y1,y2</Group>
      <Group name="add_remove" dependencies="x_first"         base="x_first">-x1,+ x4,+x5</Group>
      <Group name="union"      dependencies="x_odd,x_even"    base="x_odd">+x_even</Group>
      <Group name="complement" dependencies="x_odd,x_first"   base="x_odd">-x_first</Group>
      <Group name="intersect"  dependencies="x_even,x_first"  base="x_even">^x_first</Group>
      <Group name="sym_diff"   dependencies="x_odd,x_first"   base="x_odd">% x_first</Group>
  </VariableGroups>

  <Distributions>
    <Normal name="NormDist">
      <mean>0</mean>
      <sigma>1</sigma>
    </Normal>
  </Distributions>

  <Samplers>
    <MonteCarlo name="mc" parallel="1">
      <samplerInit>
        <limit>3</limit>
        <initialSeed>42</initialSeed>
      </samplerInit>
      <variable name="x1">
        <distribution>NormDist</distribution>
      </variable>
      <variable name="x2">
        <distribution>NormDist</distribution>
      </variable>
      <variable name="x3">
        <distribution>NormDist</distribution>
      </variable>
      <variable name="x4">
        <distribution>NormDist</distribution>
      </variable>
      <variable name="x5">
        <distribution>NormDist</distribution>
      </variable>
      <variable name="x6">
        <distribution>NormDist</distribution>
      </variable>
    </MonteCarlo>
  </Samplers>

  <Models>
    <Dummy name="MyDummy" subType=""/>
    <ExternalModel ModuleToLoad="extmod" name="extmod" subType="">
      <variable>union</variable>
      <variable>y_group</variable>
    </ExternalModel>
    <ROM name="rom" subType="NDinvDistWeight">
      <Target>x_first</Target>
      <Features>y_group</Features>
      <p>3</p>
    </ROM>
  </Models>

  <Steps>
    <MultiRun name="sample">
      <Input class="DataObjects" type="PointSet">dummyIN</Input>
      <Model class="Models" type="ExternalModel">extmod</Model>
      <Sampler class="Samplers" type="MonteCarlo">mc</Sampler>
      <Output class="DataObjects" type="PointSet">standard</Output>
      <Output class="DataObjects" type="PointSet">addrem</Output>
      <Output class="DataObjects" type="PointSet">uni</Output>
      <Output class="DataObjects" type="PointSet">comp</Output>
      <Output class="DataObjects" type="PointSet">intx</Output>
      <Output class="DataObjects" type="PointSet">sdiff</Output>
    </MultiRun>
    <RomTrainer name="train">
      <Input class="DataObjects" type="PointSet">standard</Input>
      <Output class="Models" type="ROM">rom</Output>
    </RomTrainer>
    <MultiRun name="samprom">
      <Input class="DataObjects" type="PointSet">dummyIN</Input>
      <Model class="Models" type="ROM">rom</Model>
      <Sampler class="Samplers" type="MonteCarlo">mc</Sampler>
      <Output class="DataObjects" type="PointSet">romout</Output>
    </MultiRun>
    <IOStep name="print">
      <Input class="DataObjects" type="PointSet">standard</Input>
      <Input class="DataObjects" type="PointSet">addrem</Input>
      <Input class="DataObjects" type="PointSet">uni</Input>
      <Input class="DataObjects" type="PointSet">comp</Input>
      <Input class="DataObjects" type="PointSet">intx</Input>
      <Input class="DataObjects" type="PointSet">sdiff</Input>
      <Input class="DataObjects" type="PointSet">romout</Input>
      <Output class="OutStreamManager" type="Print">dump_standard</Output>
      <Output class="OutStreamManager" type="Print">dump_addrem</Output>
      <Output class="OutStreamManager" type="Print">dump_uni</Output>
      <Output class="OutStreamManager" type="Print">dump_comp</Output>
      <Output class="OutStreamManager" type="Print">dump_intx</Output>
      <Output class="OutStreamManager" type="Print">dump_sdiff</Output>
      <Output class="OutStreamManager" type="Print">dump_romout</Output>
    </IOStep>
  </Steps>

  <DataObjects>
    <PointSet name="dummyIN" ><Input>union</Input>   <Output>OutputPlaceHolder</Output></PointSet>
    <PointSet name="standard"><Input>union</Input>   <Output>y_group</Output></PointSet>
    <PointSet name="romout"  ><Input>union</Input>   <Output>y_group</Output></PointSet>
    <PointSet name="addrem"  ><Input>add_remove</Input><Output>y_group</Output></PointSet>
    <PointSet name="uni"     ><Input>union</Input>     <Output>y_group</Output></PointSet>
    <PointSet name="comp"    ><Input>complement</Input><Output>y_group</Output></PointSet>
    <PointSet name="intx"    ><Input>intersect</Input> <Output>y_group</Output></PointSet>
    <PointSet name="sdiff"   ><Input>sym_diff</Input>  <Output>y_group</Output></PointSet>
  </DataObjects>

  <OutStreamManager>
    <Print name="dump_standard"><type>csv</type><source>standard</source></Print>
    <Print name="dump_romout"  ><type>csv</type><source>romout</source></Print>
    <Print name="dump_addrem"  ><type>csv</type><source>addrem</source></Print>
    <Print name="dump_uni"     ><type>csv</type><source>uni</source></Print>
    <Print name="dump_comp"    ><type>csv</type><source>comp</source></Print>
    <Print name="dump_intx"    ><type>csv</type><source>intx</source></Print>
    <Print name="dump_sdiff"   ><type>csv</type><source>sdiff</source></Print>
  </OutStreamManager>

</Simulation>
