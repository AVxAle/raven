<?xml version="1.0" encoding="UTF-8"?>
<Simulation verbosity="debug">

<RunInfo>
  <WorkingDir>RedundantInputs</WorkingDir>
  <Files>simp_imp.py,input.py</Files>
  <Sequence>sim_py_MC,sim_py_grid</Sequence>
  <batchSize>1</batchSize>
</RunInfo>

<Steps>
  <MultiRun name='sim_py_MC'>
    <Input   class='Files'            type=''               >input.py</Input>
    <Model   class='Models'           type='Code'           >py_script</Model>
    <Sampler class='Samplers'         type='MonteCarlo'     >5factMC</Sampler>
    <Output  class='DataObjects'      type='PointSet'       >mcset</Output>
    <Output  class='OutStreamManager' type='Print'          >mc_out</Output>
  </MultiRun>
  <MultiRun name='sim_py_grid'>
    <Input   class='Files'            type=''               >input.py</Input>
    <Model   class='Models'           type='Code'           >py_script</Model>
    <Sampler class='Samplers'         type='Grid'           >grid</Sampler>
    <Output  class='DataObjects'      type='PointSet'       >gridset</Output>
    <Output  class='OutStreamManager' type='Print'          >grid_out</Output>
  </MultiRun>
</Steps>

<Distributions>
  <Uniform name='a_dist'><lowerBound>-3 </lowerBound><upperBound>6  </upperBound></Uniform>
  <Uniform name='b_dist'><lowerBound>0.1</lowerBound><upperBound>7.6</upperBound></Uniform>
  <Uniform name='c_dist'><lowerBound>155</lowerBound><upperBound>225</upperBound></Uniform>
</Distributions>

<Samplers>
  <MonteCarlo name='5factMC'>
    <sampler_init>
      <limit>20</limit>
      <initial_seed>452508</initial_seed>
      <reseed_at_each_iteration>false</reseed_at_each_iteration>
    </sampler_init>
    <variable name='a'><distribution>a_dist</distribution></variable>
    <variable name='b'><distribution>b_dist</distribution></variable>
    <variable name='c'><distribution>c_dist</distribution></variable>
    <variable name='d'><function>raven_d_calc</function></variable>
    <variable name='e'><function>raven_e_calc</function></variable>
  </MonteCarlo>
  <Grid name='grid'>
      <variable name='a'>
          <distribution>a_dist</distribution>
          <grid type='CDF' contruction='equal' steps='3' lowerBound='0.0'>0.25</grid>
      </variable>
      <variable name='b'>
          <distribution>b_dist</distribution>
          <grid type='CDF' contruction='equal' steps='3' lowerBound='0.0'>0.25</grid>
      </variable>
      <variable name='c'>
          <distribution>c_dist</distribution>
          <grid type='CDF' contruction='equal' steps='3' lowerBound='0.0'>0.25</grid>
      </variable>
      <variable name='d'><function>raven_d_calc</function></variable>
      <variable name='e'><function>raven_e_calc</function></variable>
  </Grid>
</Samplers>

<Models>
  <Code name='py_script' subType='GenericCode'>
    <executable>RedundantInputs/simp_imp.py</executable>
    <prepend>python</prepend>
    <inputExtentions>.py</inputExtentions>
    <clargs type='prepend' arg='python'/>
    <clargs type='input'   arg='-i' extension='.py'/>
    <clargs type='output'  arg='-o'/>
  </Code>
</Models>

<Functions>
  <External name='raven_d_calc' file='RedundantInputs/d_calc.py'>
    <variable>a</variable>
    <variable>c</variable>
  </External>
  <External name='raven_e_calc' file='RedundantInputs/e_calc.py'>
    <variable>b</variable>
    <variable>c</variable>
  </External>
</Functions>

<DataObjects>
  <PointSet name='mcset'>
    <Input>a,b,c,d,e</Input>
    <Output>f,g,h</Output>
  </PointSet>
  <PointSet name='gridset'>
    <Input>a,b,c,d,e</Input>
    <Output>f,g,h</Output>
  </PointSet>
</DataObjects>

<OutStreamManager>
  <Print name='mc_out'>
    <type>csv</type>
    <source>mcset</source>
  </Print>
  <Print name='grid_out'>
    <type>csv</type>
    <source>gridset</source>
  </Print>
</OutStreamManager>

</Simulation>
