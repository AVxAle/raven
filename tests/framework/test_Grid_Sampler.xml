<?xml version="1.0" encoding="UTF-8"?>
<Simulation debug='True'>

<RunInfo>
    <WorkingDir>GridTest</WorkingDir>
    <Sequence>CustomSampler</Sequence>
    <batchSize>1</batchSize>
</RunInfo>

<Models>
    <Dummy name='MyDummy' subType='' print='True'/>
</Models>

<Distributions>
    <Normal name='Gauss1'>
        <mean>1</mean>
        <sigma>0.001</sigma>
        <lowerBound>0</lowerBound>
        <upperBound>2</upperBound>
        <adjustement>up</adjustement>
    </Normal>
    <Normal name='Gauss2'>
        <mean>1</mean>
        <sigma>0.4</sigma>
        <lowerBound>0</lowerBound>
        <upperBound>2</upperBound>
        <adjustement>scaling</adjustement>
    </Normal>
    <Triangular name='DistTri1'>
        <apex>1</apex>
        <min>-0.1</min>
        <max>4</max>
    </Triangular>
</Distributions>
<Samplers>
    <Grid name='myGrid'>
      <variable name='VarGauss1' >
        <distribution >Gauss1</distribution>
        <grid         type='value' construction='custom' >0.02 0.5 0.6</grid>
      </variable>
      <variable name='VarGauss2' >
        <distribution  >Gauss2</distribution>
        <grid         type='CDF'    construction='custom'>0.5 1.0 0.0</grid>
      </variable>
      <variable name='VarTri1'>
        <distribution  >DistTri1</distribution>
        <grid type='value' upperBound='4' construction='equal' steps='1'>0.5</grid>
      </variable>
    </Grid>
</Samplers>

<DataObjects>
     <TimePointSet name='outGrid'>
        <Input>VarGauss1,VarGauss2,VarTri1</Input>
        <Output>OutputPlaceHolder</Output>
   </TimePointSet>
   <TimePointSet name='dummyIN'>
      <Input>VarGauss1,VarGauss2,VarTri1</Input>
      <Output>OutputPlaceHolder</Output>
   </TimePointSet>
</DataObjects>
    
<OutStreamManager>
    <Print name='outGrid_dump'>
        <type>csv</type>
        <source>outGrid</source>
    </Print>
</OutStreamManager>

<Steps>
     <MultiRun name='CustomSampler'>
        <Input   class='DataObjects'     type='TimePointSet'>dummyIN</Input>
        <Model   class='Models'    type='Dummy'       >MyDummy</Model>
        <Sampler class='Samplers'  type='Grid'        >myGrid</Sampler>
        <Output  class='DataObjects'     type='TimePointSet'>outGrid</Output>
        <Output  class='Databases' type='HDF5'        >test_DummyModel_db</Output>
        <Output  class='OutStreamManager' type='Print'>outGrid_dump</Output>
    </MultiRun >
</Steps>
<Databases>
        <HDF5 name="test_DummyModel_db"/> 
</Databases>
</Simulation>



