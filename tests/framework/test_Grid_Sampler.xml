<?xml version="1.0" encoding="UTF-8"?>
<Simulation>

<RunInfo>
    <WorkingDir>GridTest</WorkingDir>
    <Sequence>CustomSampler</Sequence>
    <batchSize>2</batchSize>
</RunInfo>

<Models>
    <Dummy name='MyDummy' subType='' print='True'/>
</Models>

<Distributions>
    <Normal name='Gauss1'>
        <mean>1</mean>
        <sigma>0.001</sigma>
        <lowerBound>0</lowerBound>
        <upperBound>2</upperBound>
        <adjustement>up</adjustement>
    </Normal>
    <Normal name='Gauss2'>
        <mean>1</mean>
        <sigma>0.4</sigma>
        <lowerBound>0</lowerBound>
        <upperBound>2</upperBound>
        <adjustement>scaling</adjustement>
    </Normal>
    <Triangular name='DistTri1'>
        <apex>1</apex>
        <min>-0.1</min>
        <max>3</max>
    </Triangular>
</Distributions>
<Samplers>
    <Grid name='myGrid'>
      <varibale name='VarGauss1' >
        <distribution type='Normal'>Gauss1</distribution>
        <grid         type='value' construction='custom' >0.02 0.5 0.6</grid>
      </varibale>
      <varibale name='VarGauss2' >
        <distribution type='Normal' >Gauss2</distribution>
        <grid         type='CDF'    construction='custom'>0.5 1.0 0.0</grid>
      </varibale>
      <varibale name='VarTri1'>
        <distribution type='Triangular' >DistTri1</distribution>
        <grid type='value' upperBound='4' construction='equal' steps='1'>0.5</grid>
      </varibale>
    </Grid>
</Samplers>

<Datas>
     <TimePointSet name='outGrid'>
        <Input>VarGauss1,VarGauss2,VarTri1</Input>
        <Output>whatEver</Output>
   </TimePointSet>
   <TimePointSet name='dummyIN'>
      <Input>VarGauss1,VarGauss2,VarTri1</Input>
      <Output>whatEver</Output>
   </TimePointSet>
</Datas>

<Steps>
     <MultiRun name='CustomSampler'>
        <Input   class='Datas'     type='TimePointSet'>dummyIN</Input>
        <Model   class='Models'    type='Dummy'       >MyDummy</Model>
        <Sampler class='Samplers'  type='Grid'        >myGrid</Sampler>
        <Output  class='Datas'     type='TimePointSet'>outGrid</Output>
        <Output  class='DataBases' type='HDF5'        >test_DummyModel_db</Output>
    </MultiRun >
</Steps>
<DataBases>
        <HDF5 name="test_DummyModel_db"/> 
</DataBases>
</Simulation>



