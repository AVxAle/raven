<?xml version="1.0" ?>
<Simulation verbosity="silent">
  <RunInfo>
    <WorkingDir>plot</WorkingDir>
    <Sequence>sample,plot</Sequence>
    <batchSize>1</batchSize>
  </RunInfo>

  <Files>
  </Files>

  <Models>
    <ExternalModel ModuleToLoad="testFunction" name="PythonModule" subType="">
      <variables>X,Y,Z</variables>
    </ExternalModel>
  </Models>

  <Distributions>
    <Uniform name="zeroToOne">
      <lowerBound>0.0</lowerBound>
      <upperBound>1.0</upperBound>
    </Uniform>
    <Uniform name="oneToTwo">
      <lowerBound>1.0</lowerBound>
      <upperBound>2.0</upperBound>
    </Uniform>
  </Distributions>

  <Samplers>
    <Grid name="RAVENGrid">
      <variable name="X">
        <distribution>zeroToOne</distribution>
        <grid construction="equal" steps="4" type="value">0 1</grid>
      </variable>
      <variable name="Y">
        <distribution>oneToTwo</distribution>
        <grid construction="equal" steps="4" type="value">1  2</grid>
      </variable>
    </Grid>
  </Samplers>

  <OutStreams>
    <Plot dim="2" name="test" overwrite="false">
      <plotSettings>
        <plot>
          <type>scatter</type>
          <x>PointSet|Input|X</x>
          <y>PointSet|Input|Y</y>
          <xlabel> </xlabel>
          <ylabel> </ylabel>
          <colorMap>PointSet|Output|Z</colorMap>
          <cmap>RdBu</cmap>
          <linewidths>0</linewidths>
        </plot>
      </plotSettings>
      <kwargs><linewidths>0</linewidths></kwargs>
      <actions>
        <how>svg</how>
        <figureProperties>
          <frameon>false</frameon>
          <figsize>1,1</figsize>
        </figureProperties>
        <title>
          <text> </text>
        </title>
        <range>
          <xmin>-0.1</xmin>
          <xmax>1.1</xmax>
          <ymin>0.9</ymin>
          <ymax>2.1</ymax>
        </range>
        <colorbar>off</colorbar>
        <axis>off</axis>
        <grid>off</grid>
        <axesBox>off</axesBox>
      </actions>
    </Plot>
  </OutStreams>

  <Steps>
    <MultiRun name="sample" pauseAtEnd="false">
      <Input class="DataObjects" type="Point">inputHolder</Input>
      <Model class="Models" type="ExternalModel">PythonModule</Model>
      <Sampler class="Samplers" type="Grid">RAVENGrid</Sampler>
      <Output class="DataObjects" type="PointSet">PointSet</Output>
    </MultiRun>
    <IOStep name="plot" pauseAtEnd="false">
      <Input class="DataObjects" type="PointSet">PointSet</Input>
      <Output class="OutStreams" type="Plot">test</Output>
    </IOStep>
  </Steps>

  <DataObjects>
    <Point name="inputHolder">
      <Input>X,Y</Input>
      <Output>OutputPlaceHolder</Output>
    </Point>
    <PointSet name="PointSet">
      <Input>X,Y</Input>
      <Output>Z</Output>
    </PointSet>
  </DataObjects>

</Simulation>
