<?xml version="1.0" encoding="UTF-8"?>
<Simulation debug="False">
    <RunInfo>
        <WorkingDir>SobolSampler</WorkingDir>
        <Sequence>make,print</Sequence>
        <batchSize>1</batchSize>
    </RunInfo>

    <Steps>
        <MultiRun name='make' pauseAtEnd='False'>
            <Sampler class='Samplers'         type='Sobol'       >sobol</Sampler>
            <Input   class='Datas'            type='TimePointSet'>dummyIN</Input>
            <Model   class='Models'           type='Dummy'       >MyDummy</Model>
            <Output  class='Datas'            type='TimePointSet'>solns</Output>
        </MultiRun>
        <OutStreamStep name='print'>
            <Input   class='Datas'            type='TimePointSet'>solns</Input>
            <Output  class='OutStreamManager' type='Print'       >dump</Output>
        </OutStreamStep>
    </Steps>

    <Distributions>
        <Uniform name="UniDist">
            <low>1</low>
            <high>5</high>
        </Uniform>
    </Distributions>

    <Samplers>
        <Sobol name="sobol">
            <SobolOrder>2</SobolOrder>
            <variable name="x1"><distribution>UniDist</distribution></variable>
            <variable name="x2"><distribution>UniDist</distribution></variable>
            <variable name="x3"><distribution>UniDist</distribution></variable>
            <variable name="x4"><distribution>UniDist</distribution></variable>
            <variable name="x5"><distribution>UniDist</distribution></variable>
            <variable name="x6"><distribution>UniDist</distribution></variable>
            <ROM class = 'Models' type = 'ROM'>rom</ROM>
        </Sobol>
    </Samplers>

    <Models>
        <Dummy name="MyDummy" subType="" print="True"/>
        <ROM name='rom' subType='HDMRRom'>
            <SobolOrder>3</SobolOrder>
            <Target>ans</Target>
            <Features>x1,x2,x3,x4,x5,x6</Features>
            <IndexSet>TensorProduct</IndexSet>
            <PolynomialOrder>1</PolynomialOrder>
            <Interpolation quad='Legendre' poly='Legendre' weight='1'>x1</Interpolation>
            <Interpolation quad='Legendre' poly='Legendre' weight='1'>x2</Interpolation>
            <Interpolation quad='Legendre' poly='Legendre' weight='1'>x3</Interpolation>
            <Interpolation quad='Legendre' poly='Legendre' weight='1'>x4</Interpolation>
            <Interpolation quad='Legendre' poly='Legendre' weight='1'>x5</Interpolation>
            <Interpolation quad='Legendre' poly='Legendre' weight='1'>x6</Interpolation>
        </ROM>
    </Models>

    <Datas>
        <TimePointSet name="dummyIN">
            <Input>x1,x2,x3,x4,x5,x6</Input>
            <Output>OutputPlaceHolder</Output>
        </TimePointSet>
        <TimePointSet name='solns'>
            <Input>x1,x2,x3,x4,x5,x6</Input>
            <Output>OutputPlaceHolder</Output>
        </TimePointSet>
    </Datas>

    <OutStreamManager>
        <Print name='dump'>
            <type>csv</type>
            <source>solns</source>
        </Print>
    </OutStreamManager>
</Simulation>
