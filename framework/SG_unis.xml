<?xml version="1.0" encoding="UTF-8"?>
<Simulation debug='False'>

<RunInfo>
    <WorkingDir>StochasticPolyTest</WorkingDir>
    <Sequence>CustomSampler,Print</Sequence> <!--what is this? -->
    <batchSize>1</batchSize>
</RunInfo>

<Models>
    <Dummy name='MyDummy' subType='' print='True'/>
</Models>

<Distributions>
    <Uniform name="Uni1">
      <low>1</low>
      <high>5</high>
    </Uniform>
    <Uniform name="Uni2">
      <low>-1</low>
      <high>1</high>
    </Uniform>
    <Uniform name="Uni3">
      <low>-1</low>
      <high>1</high>
    </Uniform>
    <Uniform name="Uni4">
      <low>-1</low>
      <high>1</high>
    </Uniform>
    <Uniform name="Uni5">
      <low>-1</low>
      <high>1</high>
    </Uniform>
    <Uniform name="Uni6">
      <low>-1</low>
      <high>1</high>
    </Uniform>
    <Uniform name="Uni7">
      <low>-1</low>
      <high>1</high>
    </Uniform>
    <Uniform name="Uni8">
      <low>-1</low>
      <high>1</high>
    </Uniform>
</Distributions>

<Samplers>
    <StochasticPolynomials name='myStochPolys' indexSetType='HyperbolicCross' maxPolyOrder='5'>
      <variable name='VarUni1' impWeight='1'>
        <distribution>Uni1</distribution>
        <quadrature>
          <type>ClenshawCurtis</type>
        </quadrature>
      </variable>
      <variable name='VarUni2' impWeight='1'>
        <distribution>Uni2</distribution>
        <quadrature>
          <type>ClenshawCurtis</type>
        </quadrature>
      </variable>
      <!--variable name='VarUni3' impWeight='1'>
        <distribution>Uni3</distribution>
        <quadrature>
          <type>ClenshawCurtis</type>
        </quadrature>
      </variable>
      <variable name='VarUni4' impWeight='1'>
        <distribution>Uni4</distribution>
        <quadrature>
          <type>ClenshawCurtis</type>
        </quadrature>
      </variable>
      <variable name='VarUni5' impWeight='1'>
        <distribution>Uni5</distribution>
        <quadrature>
          <type>ClenshawCurtis</type>
        </quadrature>
      </variable>
      <variable name='VarUni6' impWeight='1'>
        <distribution>Uni6</distribution>
        <quadrature>
          <type>ClenshawCurtis</type>
        </quadrature>
      </variable>
      <variable name='VarUni7' impWeight='1'>
        <distribution>Uni7</distribution>
        <quadrature>
          <type>ClenshawCurtis</type>
        </quadrature>
      </variable>
      <variable name='VarUni8' impWeight='1'>
        <distribution>Uni8</distribution>
        <quadrature>
          <type>ClenshawCurtis</type>
        </quadrature>
      </variable-->
    </StochasticPolynomials>
</Samplers>

<Datas>
     <TimePointSet name='outGrid'>
       <!--Input>VarUni1,VarUni2,VarUni3,VarUni4,VarUni5,VarUni6,VarUni7,VarUni8</Input-->
       <Input>VarUni1,VarUni2</Input>
       <Output>OutputPlaceHolder</Output>
   </TimePointSet>
   <TimePointSet name='dummyIN'>
       <!--Input>VarUni1,VarUni2,VarUni3,VarUni4,VarUni5,VarUni6,VarUni7,VarUni8</Input-->
       <Input>VarUni1,VarUni2</Input>
      <Output>OutputPlaceHolder</Output>
   </TimePointSet>
</Datas>
    
<OutStreamManager>
    <Print name='outGrid_dump'>
        <type>csv</type>
        <source>outGrid</source>
    </Print>
    <Plot name="Unis" dim="2" overwrite="True" pauseAtEnd="True">
      <plotSettings>
        <plot>
          <type>scatter</type>
          <x>outGrid|Input|VarUni1</x>
          <y>outGrid|Input|VarUni2</y>
        </plot>
        <xlabel>Uni1</xlabel>
        <ylabel>Uni2</ylabel>
      </plotSettings>
      <actions>
        <how>pdf,screen</how>
        <title><text>SG, GL, Uniforms, TP, L=5</text></title>
      </actions>
    </Plot>
</OutStreamManager>

<Steps>
     <MultiRun name='CustomSampler'>
        <Input   class='Datas'     type='TimePointSet'>dummyIN</Input>
        <Model   class='Models'    type='Dummy'       >MyDummy</Model>
        <Sampler class='Samplers'  type='StochasticPolynomials'>myStochPolys</Sampler>
        <Output  class='Datas'     type='TimePointSet'>outGrid</Output>
        <Output  class='DataBases' type='HDF5'        >test_DummyModel_db</Output>
    </MultiRun>
    <OutStreamStep name="Print">
        <Input   class='Datas'     type='TimePointSet'>outGrid</Input>
        <Output  class='OutStreamManager' type='Print'>outGrid_dump</Output>
    </OutStreamStep>
    <!--OutStreamStep name="Plot" pauseAtEnd="True">
        <Input   class='Datas'     type='TimePointSet'>outGrid</Input>
        <Output  class='OutStreamManager' type='Plot'>Unis</Output>
    </OutStreamStep-->
</Steps>
<DataBases>
        <HDF5 name="test_DummyModel_db"/> 
</DataBases>
</Simulation>



